---
import { app } from '@/lib/apiTreaty';

const users = await app.user.all.get();

---

<div class="div">
    <table class="min-w-full bg-white border border-gray-200 shadow-md rounded-md">
        <tr>
            <th>ID</th>
            <th>Email</th>
            <th>FirstName</th>
            <th>LastName</th>
        </tr>
        { users.data && users.data.length > 0
        ?
            users.data.map((user) => (
                <tr class="border-b border-gray-200 hover:bg-gray-100">
                <td class="py-3 px-6 text-center border border-gray-100">{user.id}</td>
                <td class="py-3 px-6 text-center border border-gray-100">{user.email}</td>
                <td class="py-3 px-6 text-center border border-gray-100">{user.firstname}</td>
                <td class="py-3 px-6 text-center border border-gray-100">{user.lastname}</td>
                <td class="py-3 px-6 text-center border border-gray-100"> 
                    <a href={`/admin/manageUser?id=${user.id}&email=${encodeURIComponent(user.email)}&firstname=${encodeURIComponent(user.firstname)}&lastname=${encodeURIComponent(user.lastname)}`}>
                        <button 
                            id="addUser" 
                            class="bg-blue-500 text-white py-2 px-4 rounded hover:bg-blue-600 focus:outline-none">
                            Editar Usuario
                        </button>  
                    </a>
                </td>
                </tr>
            ))
        : <td>No hay usuarios en la base de datos</td>
        }
    </table>
    <a href={`/admin/manageUser`}> 
        <button 
            id="addUser" 
            class="bg-slate-500 py-2 px-3 text-white font-bold rounded-lg">
            Agregar Usuario
        </button>  
    </a>
       
</div>