---
interface Props {
	name: string;
  address: string;
  image: string;
}
const { name, address, image } = Astro.props;
---

<div class="relative m-4 max-w-xs rounded-lg overflow-hidden shadow-lg hover:scale-105 transition-transform bg-white">
    <img class="w-full h-48 object-cover" src={image} alt={`Imagen de ${name}`} />
    <div class="px-6 py-4">
      <h2 class="font-bold text-xl mb-2 text-gray-800">{name}</h2>
      <p class="text-gray-600">{address}</p>
    </div>
  </div>