---
interface Props {
	name: string;
  address: string;
  image: string;
}
const { name, address, image } = Astro.props;
---

<div class="relative m-10 max-w-56 rounded-lg overflow-hidden shadow-lg hover:scale-105 transition-transform bg-white">
    <img class="w-full h-32 object-cover" src={image} alt={`Imagen de ${name}`} />
    <div class="px-3 py-2">
      <h2 class="font-bold text-lg mb-1 text-gray-800">{name}</h2>
      <p class="text-gray-600 text-sm">{address}</p>
    </div>
</div>