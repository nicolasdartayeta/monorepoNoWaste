---
interface Props {
	name: string;
  address: string;
  logo: string;
  image: string;
}
const { name, address, logo, image } = Astro.props;
---

<div class="relative w-full max-w-md rounded-lg overflow-hidden shadow-lg hover:scale-105 transition-transform bg-white">
  <div class="h-32 bg-sky-300 relative">
    <img class="w-full h-full object-cover" src={image} alt={`Imagen de ${name}`} />
    <div class="absolute -bottom-12 left-4 w-24 h-24 rounded-full bg-white p-1 shadow-md">
      <img class="w-full h-full rounded-full object-cover"  src={logo} alt={`Logo de ${name}`} />
    </div>
  </div>
  <div class="px-4 py-4 pt-16">
    <h2 class="font-bold text-2xl mb-1 text-gray-800">{name}</h2>
    <p class="text-gray-600 text-sm">{address}</p>
  </div>
</div>