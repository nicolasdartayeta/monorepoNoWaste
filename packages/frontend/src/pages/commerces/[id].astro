---
import Layout from "@/layouts/Layout.astro";
import ProductCard from "@/components/ProductCard.astro";
import comercioImage from "../../../public/empa.jpg"
import comercioLogo from "../../../public/images.png"
const {id} = Astro.params;
const COMMERCE_API_URL = `http://localhost:3000/commerce/${id}`;
const PRODUCTS_API_URL = `http://localhost:3000/commerce/${id}/products`;
interface Comercio {
  id: string; 
  name: string;
  description: string;
  address: string;
  city: string;
  creation_date: string; 
  active: boolean;
  owner_id: string; 
}
interface Producto {
  id: string;
  name: string;
  description: string;
  price: string;
  expiration_date: string;
}

let comercio: Comercio | null = null;
let productos: Producto[] = [];
try {
  const response = await fetch(COMMERCE_API_URL);
  if (response.ok) {
    const data = await response.json();
    if (data) {
      comercio = data;
      const productosResponse = await fetch(PRODUCTS_API_URL);
      if (productosResponse.ok) {
        const productosData = await productosResponse.json();
        productos = productosData;
      } else {
        console.log("Error al obtener los productos:", productosResponse.statusText);
      }
    } else {
      console.log("La respuesta es válida pero el cuerpo está vacío.");
    }
  } else {
    console.log("Error al obtener el comercio:", response.statusText);
  }
} catch (error) {
  console.log("Error al analizar el JSON:", error);
}
---

<Layout title="Comercio">
  {comercio ? (
    <div class="relative p-6 mx-auto rounded-xl shadow-md max-w-3xl flex items-center">
      <div 
        class="absolute inset-0 bg-cover bg-center rounded-xl" 
        style={`background-image: url(${comercioImage.src}); opacity: 0.3; z-index: 0;`} 
      ></div>
      
      <div class="relative z-10 mr-6">
        <img class="w-32 h-32 rounded-full object-cover" src={comercioLogo.src} alt={`Imagen de ${comercio.name}`} />
      </div>
      
      <div class="relative z-10 text-left p-4">
        <h1 class="text-2xl font-bold text-gray-600 mb">
          {comercio.name}
        </h1>
        <p class="text-gray-600">
          {comercio.description}
        </p>
        <div class="text-gray-600 flex items-start mt-4">
          <p class="font-medium mr-2">Dirección:</p>
          <p>{comercio.address}, {comercio.city}</p>
        </div> 
      </div>
    </div>
  ) : (
    <div class="p-6 mx-auto bg-red-100 rounded-xl shadow-md space-y-4 text-center">
      <h1 class="text-2xl font-bold text-red-600">
        El comercio buscado no existe
      </h1>
    </div>
  )}
  {productos.length > 0 ? (
    <div class="relative z-10 mt-6">
      <h2 class="text-xl font-semibold text-gray-700">Productos:</h2>
      <ul>
        {productos.map((producto) => (
          <li class="mt-4">
            <ProductCard 
              id={producto.id}
              name={producto.name}
              description={producto.description}
              price={producto.price}
              expiration_date={producto.expiration_date}
              >
            </ProductCard>
          </li>
        ))}
      </ul>
    </div>
  ) : (
    <p class="relative z-10 mt-6 text-gray-600">No hay productos disponibles.</p>
  )}
</Layout>