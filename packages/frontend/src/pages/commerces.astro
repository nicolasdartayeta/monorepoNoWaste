---
import Layout from "@/layouts/Layout.astro";
import CommerceCard from "@/components/CommerceCard.astro";
import comercioImage from "../../public/images.png"

const API_URL = "http://localhost:3000/commerce";
interface Comercio {
  id: string; 
  name: string;
  description: string;
  address: string;
  city: string;
  creation_date: string; 
  active: boolean;
  owner_id: string; 
}
const response = await fetch(API_URL);
const comercios: Comercio[] = await response.json();

---

<Layout title= "Comercios">
  <div class = "grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-2 p-4">
      {comercios.map((comercio) => (
        <CommerceCard 
        name={comercio.name}
        address={comercio.address}
        image={comercioImage.src} 
        />
      ))}
  </div>
</Layout>
    



