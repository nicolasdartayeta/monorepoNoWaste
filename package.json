{
    "name": "my-monorepo",
    "private": true,
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "dev": "bun install && bun run --filter '*' dev",
        "lint": "bun run --filter '*' lint",
        "format": "bun run --filter '*' format",
        "build": "bun run --filter '*' build",
        "start": "bun run --filter '*' start",
        "test": "bun run --filter '*' test",
        "docker:dev": "bun run --filter '*' docker:dev"
    },
    "dependencies": {
        "@elysiajs/cors": "^1.1.1",
        "@elysiajs/jwt": "^1.1.1",
        "elysia": "^1.1.13",
        "eslint": "^9.10.0",
        "prettier": "^3.3.3"
    }
}